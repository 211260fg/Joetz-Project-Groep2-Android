<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/maintheme_dark</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <item name="colorPrimary">@color/maintheme</item>
        <item name="colorPrimaryDark">@color/maintheme_dark</item>
        <item name="colorAccent">@color/maintheme</item>

        <item name="android:colorAccent">@color/maintheme</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/maintheme</item>
        <item name="colorControlHighlight">@color/maintheme</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/maintheme</item>
        <item name="android:colorButtonNormal">@color/maintheme</item>


    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">12sp</item>
        <item name="colorAccent">@color/maintheme</item>
        <item name="android:colorAccent">@color/maintheme</item>
    </style>

    <style name="filter" parent="filter">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="filterTitle" parent="filter">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="filterSubtitle" parent="filter">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="filterText" parent="filter">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/maintheme</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/maintheme</item>
        <item name="android:colorAccent">@color/maintheme</item>
    </style>

</resources>
